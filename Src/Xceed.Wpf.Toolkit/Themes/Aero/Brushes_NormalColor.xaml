        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Offset="0" Color="#FFabadb3" />
                <GradientStop Offset="0.05000000074505806" Color="#FFdbdfe6" />
                <GradientStop Offset="0.949999988079071" Color="#FFdbdfe6" />
                <GradientStop Offset="1" Color="#FFe3e9ef" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
