    xmlns:themes="clr-namespace:Xceed.Wpf.Toolkit.Themes">

    <SolidColorBrush
        x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type themes:ResourceKeys},
                                     ResourceId=ControlNormalBackgroundKey}"
        options:Freeze="true"
        Color="#FFFFFF" />
    <SolidColorBrush
        x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type themes:ResourceKeys},
                                     ResourceId=ControlDisabledBackgroundKey}"
        options:Freeze="true"
        Color="#F4F4F4" />
